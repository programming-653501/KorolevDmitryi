#include <iostream>
#include <conio.h>
#include <stdio.h>
#include <windows.h>

void out(const char c[10]){
	for (int i=0; c[i] != '\0'; i++) {
		std::cout<<c[i];
	}
	return;
}

bool check(int a){
	if (a<0||a>1001) {
		std::cout<<"\nЧто-то пошло не так.";
		getch();
		return true;
	}
	return false;
}

void delo(int k, const int c){
	if (check(k)) return ;
	const char num[10][6]={"","од","дв","тр","четыр","пят","шест","сем","вос","девят"};
	const char sot1[7][5]={"","сто","ста","сто","стам","сто","ста"};
	const char sot2[7][6]={"","ста","сот","","стам","стами","стах"};
	const char pad[7][10][5]={
	"","ин","а","и","е","ь","ь","ь","емь","ь",
	"","ного","ух","ёх","ёх","и","и","и","ьми","и",
	"","ин","а","и","е","ь","ь","ь","емь","ь",
	"","ному","ум","ём","ём","и","и","и","ьми","и",
	"","им","умя","емя","ьмя","ью","ью","ью","емью","ью",
	"","ном","ух","ёх","ёх","и","и","и","ьми","и"};
	const char tis[10][20]={"","одна тысяча","одной тысячи","сто","одной тысяче","одной тысячей","одной тысяче"};
	if(k/100==1) {
		out(sot1[c]);
		std::cout<<" ";
	}
	else{
		if(k/100==2&&c==1) {
			out("двести ");
		}else{
			if(k/100>1){
				out(num[k/100]);
				out(pad[c-1][k/100]);
				if(c==1&&k/100>4){
					out("ста");
				}else{
					out(sot2[c]);
				}
				std::cout<<" ";
			}
		}
	}
	return;
}

int _tmain(int argc, _TCHAR* argv[])
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	char s[10];
	int k=0,i;
	std::cout<<"Введите число(цифрами), а затем первую букву желаемого падежа(ирдвтп): ";
	gets(s);
	for (i = 0; s[i]!='\0'; i++) {
		if(s[i]>=48&&s[i]<=57) {
			k=k*10+(s[i]-48);
		}
		else {
			switch(s[i]) {
			case 'и': delo(k,1); break;
			case 'р': delo(k,2); break;
			case 'в': delo(k,1); break;
			case 'д': delo(k,4); break;
			case 'т': delo(k,5); break;
			case 'п': delo(k,6); break;
			case 'И': delo(k,1); break;
			case 'Р': delo(k,2); break;
			case 'В': delo(k,1); break;
			case 'Д': delo(k,4); break;
			case 'Т': delo(k,5); break;
			case 'П': delo(k,6); break;
			default: continue;
			}
		}
	}
	getch();
	return 0;
}

