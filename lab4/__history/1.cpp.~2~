#include <iostream>
#include <conio.h>
#include <stdio.h>
#include <windows.h>

void out(const char c[10]){
	for (int i=0; c[i] != '\0'; i++) {
		std::cout<<c[i];
	}
	return;
}

bool check(int a){
	if (a<0||a>1001) {
		std::cout<<"\nЧто-то пошло не так.";
		getch();
		return true;
	}
	return false;
}

void delo(int k, const int c){
	if (check(k)) return ;
	const char num[10][6]={"","од","дв","тр","четыр","пят","шест","сем","вос","девят"};
	const char sot1[7][5]={"","сто","ста","сто","ста","ста","ста"};
	const char sor[7][7]={"","сорок","сорока","сто","сорока","сорока","сорока"};
	const char sot2[7][6]={"","сот","сот","","стам","стами","стах"};
	const char desp[7][9]={"","дцать","дцати","","дцати","дцатью","дцати"};
	const char pad[7][10][5]={
	"","ин","а","и","е","ь","ь","ь","емь","ь",
	"","ного","ух","ёх","ёх","и","и","и","ьми","и",
	"","ин","а","и","е","ь","ь","ь","емь","ь",
	"","ному","ум","ём","ём","и","и","и","ьми","и",
	"","им","умя","емя","ьмя","ью","ью","ью","емью","ью",
	"","ном","ух","ёх","ёх","и","и","и","ьми","и"};
	const char tis[10][20]={"","одна тысяча","одной тысячи","сто","одной тысяче","одной тысячей","одной тысяче"};
	if (k==1000) {
		std::cout<<tis[c];
		return;
	}
	if(k==100){
		std::cout<<sot1[c];
		return;
	}
	if(k/100==1) {
		out(sot1[c]);
	}
	else{
		if(k/100==3&&c==1) {
			out("триста");}
		if(k/100==4&&c==1) {
			out("четыреста");}
		if(k/100==2&&c==1) {
			out("двести");
		}else{
			if(k/100>4){
				out(num[k/100]);
				out(pad[c-1][k/100]);
				if(c==1&&k/100>4){
					out("ста");
				}else{
					out(sot2[c]);
				}
			}
		}
	}
	k=k%100;
	if(k>10){
		out(" ");
	}
	if (k==10) {
		out("десят");
		out(pad[c-1][9]);
		return;
	}
	if (k<20&&k>10) {
		out(num[k%10]);
		out(pad[0][k%10]);
		out("на");
		out(desp[c]);
		return;
	}else{
		if (k>=20&&k<40) {
			out(num[k/10]);
			out(pad[0][k/10]);
			out(desp[c]);
		}
		if (k>=40&&k<50) {
			out(sor[c]);
		}
		if (k>49) {
			out(num[k/10]);
			out(pad[c-1][k/10]);
            out("десят");
			out(pad[c-1][9]);
		}
	}
	k=k%10;
	if(k==0){
	return;
	}else{
		out(" ");
	}
	out(num[k]);
	out(pad[c-1][k]);
	return;
}

int _tmain(int argc, _TCHAR* argv[])
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	char s[10];
	int k=0,i;
	std::cout<<"Введите число(цифрами), а затем первую букву желаемого падежа(ирдвтп): ";
	gets(s);
	for (i = 0; s[i]!='\0'; i++) {
		if(s[i]>=48&&s[i]<=57) {
			k=k*10+(s[i]-48);
		}
		else {
			switch(s[i]) {
			case 'и': delo(k,1); break;
			case 'р': delo(k,2); break;
			case 'в': delo(k,1); break;
			case 'д': delo(k,4); break;
			case 'т': delo(k,5); break;
			case 'п': delo(k,6); break;
			case 'И': delo(k,1); break;
			case 'Р': delo(k,2); break;
			case 'В': delo(k,1); break;
			case 'Д': delo(k,4); break;
			case 'Т': delo(k,5); break;
			case 'П': delo(k,6); break;
			default: continue;
			}
		}
	}
	getch();
	return 0;
}

